.c.krc:
	$(ANSI2KNR) $< > $@

.h.krh:
	$(ANSI2KNR) $< > $@

.krc.kro:
	cp $< krtmp$$.c && \
	$(CC) -c $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) krtmp$$.c && \
	mv krtmp$$.o $@

.c.kro:
	$(ANSI2KNR) $< > $*.krc
	cp $*.krc krtmp$$.c && \
	$(CC) -c $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CFLAGS) krtmp$$.c && \
	mv krtmp$$.o $@

