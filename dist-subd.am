distdir = ../$(PACKAGE)-$(VERSION)/$(subdir)
dist: $(DISTFILES)
	@for file in $(DISTFILES); do		\
## See dist-subd-top.am to understand this.
	  test -f $(distdir)/$$file || {	\
	    echo linking $$file;		\
	    ln $(srcdir)/$$file $(distdir)/$$file; \
	  } || {				\
	    echo copying $$file instead;	\
	    cp -p $(srcdir)/$$file $(distdir)/$$file; \
	  };					\
	done

