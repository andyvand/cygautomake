install-pdata: $(PACKAGEDATA)
	dir=$(datadir)/`echo $(PACKAGE) | sed '$(transform)'`; \
	$(top_srcdir)/mkinstalldirs $$dir;	\
	for p in $(PACKAGEDATA); do		\
	  $(INSTALL_DATA) $(srcdir)/$$p $$dir/$$p; \
	done

uninstall-pdata:
	dir=$(datadir)/`echo $(PACKAGE) | sed '$(transform)'`; \
	for p in $(PACKAGEDATA); do		\
	  rm -f $$dir/$$p;			\
	done

