install:: install-scripts

install-scripts: $(SCRIPTS)
	$(top_srcdir)/mkinstalldirs $(bindir)
	for p in $(SCRIPTS); do			\
	  $(INSTALL_SCRIPT) $$p $(bindir)/`echo $$p|sed '$(transform)'`; \
	done

uninstall:: uninstall-scripts

uninstall-scripts:
	for p in $(SCRIPTS); do			\
	  rm -f $(bindir)/`echo $$p|sed '$(transform)'`; \
	done

