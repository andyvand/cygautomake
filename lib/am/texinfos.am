MAKEINFO = makeinfo
TEXI2DVI = texi2dvi
infodir = $(prefix)/info

.SUFFIXES: .texi .info .dvi
.texi.info:
	$(MAKEINFO) $<

.texi.dvi:
	$(TEXI2DVI) $<

install-info:
	cd $(srcdir); for file in m4.info*; do \
	  $(INSTALL_DATA) $$file $(infodir)/$$file; \
	done

uninstall-info:
	rm -f $(infodir)/m4.info*

texclean:
	rm -f *.aux *.cp *.cps *.dvi *.fn *.fns *.ky *.log *.pg *.toc *.tp *.vr
