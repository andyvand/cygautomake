tags TAGS::
	tags=;					\
	for subdir in $(SUBDIRS); do		\
	  (cd $$subdir && $(MAKE) TAGS);	\
	  if test -f $$subdir/TAGS; then	\
	    tags="$$tags -i $$subdir/TAGS";	\
	  fi;					\
	done;					\
	if test -n "$(ETAGS_ARGS)$(CONFIG_HEADER)$$tags"; then \
	  etags $(ETAGS_ARGS) $$tags $(CONFIG_HEADER) \
	fi
