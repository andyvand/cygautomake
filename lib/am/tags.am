tags: TAGS

TAGS:
	tags=;					\
	here=`pwd`;				\
	for subdir in $(SUBDIRS); do		\
	  (cd $$subdir && $(MAKE) TAGS);	\
	  if test -f $$subdir/TAGS; then	\
	    tags="$$tags -i $$here/$$subdir/TAGS"; \
	  fi;					\
	done;					\
	if test -n "$(ETAGS_ARGS)$(CONFIG_HEADER)$(SOURCES)$(HEADERS)$$tags"; \
	then					\
	  etags $(ETAGS_ARGS) $$tags $(CONFIG_HEADER) $(SOURCES) $(HEADERS); \
	fi

