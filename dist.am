PACKAGE = @PACKAGE@
VERSION = @VERSION@

distdir = $(PACKAGE)-$(VERSION)
dist: $(DIST_FILES) $(DIST_DIRS)
	rm -rf $(distdir)
	mkdir $(distdir)
	@for file in $(DIST_FILES); do \
	  echo linking $$file; \
	  ln $(srcdir)/$$file $(distdir)/$$file || \
	    { echo copying $$file instead; cp -p $(srcdir)/$$file $(distdir)/$$file;}; \
	done
	chmod -R a+r $(distdir)
	tar -chozf $(distdir).tar.gz $(distdir)
	rm -rf $(distdir)

