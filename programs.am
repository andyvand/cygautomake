bindir = $(exec_prefix)/bin
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

install:: install-programs

install-programs: $(PROGRAMS)
        for p in $(PROGRAMS); do \
          $(INSTALL_PROGRAM) $$p $(bindir)/`echo $$p|sed '$(transform)'`; \
        done

uninstall:: uninstall-programs

uninstall-programs:
        for p in $(PROGRAMS); do \
          rm -f $(bindir)/`echo $$p|sed '$(transform)'`; \
        done
