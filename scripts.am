install-@DIR@SCRIPTS: $(@DIR@_SCRIPTS)
	$(top_srcdir)/mkinstalldirs $(@DIR@dir)
	for p in $(@DIR@_SCRIPTS); do		\
	  $(INSTALL_SCRIPT) $$p $(@DIR@dir)/`echo $$p|sed '$(transform)'`; \
	done

uninstall-@DIR@SCRIPTS:
	for p in $(@DIR@_SCRIPTS); do		\
	  rm -f $(@DIR@dir)/`echo $$p|sed '$(transform)'`; \
	done

