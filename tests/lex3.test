#! /bin/sh

# Test to make sure that lex source generates correct clean rule.
# From Ralf Corsepius.

. $srcdir/defs || exit 1

cat >> configure.in << 'END'
AC_PROG_CC
AM_PROG_LEX
END

cat > Makefile.am << 'END'
bin_PROGRAMS = zot
zot_SOURCES = joe.l
LDADD = @LEXLIB@
END

: > joe.l

$AUTOMAKE || exit 1

fgrep joel Makefile.in && exit 1
exit 0
