#! /bin/sh

# Test to make sure C-but-not-CC error works.

. $srcdir/defs || exit 1

set -e

cat >> configure.in << 'END'
dnl AC_PROG_CC and AC_PROG_CXX missing on purpose
AC_LIBOBJ([fsusage])
AC_LIBOBJ([mountlist])
END

cat > Makefile.am << 'END'
bin_PROGRAMS = foo
foo_SOURCES = x.C
foo_LDADD = @LIBOBJS@
END

: > fsusage.c
: > mountlist.c

$ACLOCAL
$AUTOMAKE 2>err && exit 1
cat err
$FGREP CC err
$FGREP CXX err
