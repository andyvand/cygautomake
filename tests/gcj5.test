#! /bin/sh

# Make sure Automake suggests AM_PROG_GCJ when GCJ is needed.

. $srcdir/defs || exit 1

set -e

cat >> configure.in << 'END'
_AM_DEPENDENCIES(GCJ)
END

cat > Makefile.am << 'END'
bin_PROGRAMS = convert
convert_SOURCES = convert.java
END

$ACLOCAL
$AUTOMAKE 2>stderr && exit 1
cat stderr
grep AM_PROG_GCJ stderr
