#! /bin/sh

# Make sure that `maintainer-clean' removes Makefile.in, configure,
# and aclocal.m4.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AC_INIT(Makefile.am)
AM_INIT_AUTOMAKE(foo,0,no)
AM_MAKE_INCLUDE
AC_OUTPUT(Makefile)
END

: > Makefile.am

$needs_autoconf

set -e

$ACLOCAL
$AUTOCONF
$AUTOMAKE

export ACLOCAL
export AUTOCONF
export AUTOMAKE

./configure

$MAKE maintainer-clean

test -f Makefile.in && exit 1
test -f configure && exit 1
test -f aclocal.m4 && exit 1

exit 0
