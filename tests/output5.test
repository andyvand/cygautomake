#! /bin/sh

# Make sure Automake complains when there is no Makefile specified.

. $srcdir/defs || exit 1

set -e

cat > configure.in << 'END'
AC_INIT([foo], [bar], [baz])
AM_INIT_AUTOMAKE
AC_OUTPUT
END

: > Makefile.am

$ACLOCAL
$AUTOMAKE > output 2>&1 && exit 1
cat output
grep 'found or specified' output
