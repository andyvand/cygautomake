#! /bin/sh

# Check to make sure incorrect LDADD usage is diagnosed.

required=libtool
. $srcdir/defs || exit 1

cat >> configure.in << 'END'
AC_PROG_CC
AC_PROG_LIBTOOL
AC_SUBST([LTLIBOBJS], [q.lo])
AC_OUTPUT
END

cat > Makefile.am << 'END'
lib_LTLIBRARIES = libtu.la
libtu_la_SOURCES = foo.c
libtu_la_LDADD = @LTLIBOBJS@
END

: > ltconfig
: > ltmain.sh
: > config.guess
: > config.sub
: > q.c

$ACLOCAL || exit 1
$AUTOMAKE 2>&1 | grep LDADD || exit 1
exit 0
