#! /bin/sh

# Test for bug reported by Eric Magnien.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AC_OUTPUT([subdir/Makefile subdir/foo Makefile foo], [true])
END

mkdir subdir

: > Makefile.am
: > subdir/Makefile.am
: > foo.in
: > subdir/foo.in

$AUTOMAKE || exit 1

grep '^DIST_COMMON =.*foo\.in' Makefile.in
