#! /bin/sh

# Test to make sure .info-less @setfilename works.

. $srcdir/defs || exit 1

set -e

cat > Makefile.am << 'END'
info_TEXINFOS = textutils.texi
END

echo '@setfilename textutils' > textutils.texi
: > texinfo.tex

$ACLOCAL
$AUTOMAKE

grep '^INFO_DEPS.*textutils$' Makefile.in
grep '^.texi:$' Makefile.in
