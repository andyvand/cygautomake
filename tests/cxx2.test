#! /bin/sh

# Test that Automake suggests using AC_PROG_CXX if C++ sources are used.

. $srcdir/defs || exit 1

set -e

echo AC_PROG_CC >>configure.in

cat >Makefile.am <<'END'
bin_PROGRAMS = hello
hello_SOURCES = hello.cpp
END

$ACLOCAL
$AUTOMAKE 2>stderr && exit 1
cat stderr
grep AC_PROG_CXX stderr
