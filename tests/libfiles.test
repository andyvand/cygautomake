#! /bin/sh

# Test for bug reported by Gord Matzigkeit.  If user-defined prefix is
# used with library, _LIBFILES is never generated.

. $srcdir/defs || exit 1

cat >> configure.in << 'END'
AC_PROG_CC
AC_PROG_RANLIB
END

cat > Makefile.am << 'END'
blibdir = $(top_builddir)/lib
blib_LIBRARIES = foo
foo_SOURCES = foo.c
END

$AUTOMAKE || exit 1

grep '^blib_LIBFILES' Makefile.in
