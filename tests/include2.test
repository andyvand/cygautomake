#! /bin/sh

# Make sure included files in parent directory are distributed.

. $srcdir/defs || exit 1

set -e

cat >> configure.in << 'END'
AC_CONFIG_FILES([sub/Makefile])
AC_OUTPUT
END

cat > Makefile.am << 'END'
SUBDIRS = sub
test: distdir
	test -f $(distdir)/foo
	test -f $(distdir)/bar
END

: > foo
: > bar

mkdir sub
cat > sub/Makefile.am << 'END'
include $(top_srcdir)/foo
include ../bar
END

$ACLOCAL
$AUTOCONF
$AUTOMAKE
./configure
$MAKE test
